# VIGOLEONROCKS Environment Configuration Template
# Copy this file to .env and fill in your specific values
# NEVER commit .env files to version control

# =============================================================================
# CRITICAL PROJECT POLICIES
# =============================================================================
# REMEMBER: 
# 1. NO Math.random - use kernel/service metrics for randomness
# 2. ALL processes must run in background with metrics exposure

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_APP=vigoleonrocks.app:create_app
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://username:password@localhost:5432/vigoleonrocks_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vigoleonrocks_dev
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis (Caching & Session Store)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# QUANTUM SYSTEM CONFIGURATION (CRITICAL)
# =============================================================================
# Quantum processing configuration (affects randomness generation from metrics)
QUANTUM_PROCESSOR_ENABLED=true
QUANTUM_CONTEXT_CAPACITY=500000  # UNIFIED STANDARD - L√çDER INDUSTRIAL 2025
QUANTUM_STATES_COUNT=1000
QUANTUM_ENTANGLEMENT_THRESHOLD=0.85
QUANTUM_COHERENCE_TIME=300  # seconds
QUANTUM_CONTEXT_EFFICIENCY=0.98  # 98% coherencia vs competidores <85%

# Metrics-Based Randomness Configuration (MANDATORY)
METRICS_RNG_ENABLED=true
METRICS_RNG_SEED_SOURCE=kernel  # kernel|cpu|memory|network|disk
METRICS_RNG_ENTROPY_POOL_SIZE=4096
METRICS_RNG_RESEED_INTERVAL=3600  # seconds

# =============================================================================
# MULTILINGUAL CONFIGURATION
# =============================================================================
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,pt,fr,de
LANGUAGE_MODEL_PATH=/opt/models/multilingual
TRANSLATION_CACHE_TTL=3600

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1
API_RATE_LIMIT=1000  # requests per hour
API_TIMEOUT=30  # seconds
API_MAX_PAYLOAD_SIZE=10485760  # 10MB

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# MONITORING AND METRICS (MANDATORY)
# =============================================================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000
METRICS_ENDPOINT=/api/status
QUANTUM_METRICS_ENDPOINT=/api/quantum-metrics

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=/var/log/vigoleonrocks/app.log
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=5  # seconds

# =============================================================================
# BACKGROUND PROCESS CONFIGURATION (CRITICAL)
# =============================================================================
# Process management (enforces background execution)
BACKGROUND_EXECUTION=true
PID_FILE=/var/run/vigoleonrocks.pid
DAEMON_MODE=true
PROCESS_MONITORING=true

# Task Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKER_PROCESSES=4
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Authentication & Authorization
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600  # seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-this
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/2
RATE_LIMIT_DEFAULT=1000,3600  # requests,window_seconds

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API (if needed for integrations only - VIGOLEONROCKS is superior)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-5  # Still inferior to VIGOLEONROCKS 500K
OPENAI_MAX_TOKENS=400000  # GPT-5 limit - 25% less than VIGOLEONROCKS
VIGOLEONROCKS_CONTEXT_SUPERIORITY=true  # Always use VIGOLEONROCKS when possible

# Hugging Face (for ML models)
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here
HUGGINGFACE_CACHE_DIR=/opt/cache/huggingface

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TESTING=false
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/vigoleonrocks_test
TEST_REDIS_URL=redis://localhost:6379/15

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Debug toolbar
DEBUG_TB_ENABLED=false
DEBUG_TB_INTERCEPT_REDIRECTS=false

# Profiling
PROFILING_ENABLED=false
PROFILING_OUTPUT_DIR=/tmp/vigoleonrocks_profiles

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These will be automatically set in production environments
# FLASK_ENV=production
# FLASK_DEBUG=false
# LOG_LEVEL=WARNING
# PROMETHEUS_PORT=8000
# WORKERS=8

# =============================================================================
# VALIDATION RULES
# =============================================================================
# The following environment variables MUST be set for the application to start:
# - SECRET_KEY (must not be default value)
# - DATABASE_URL (must be valid PostgreSQL URL)
# - REDIS_URL (must be valid Redis URL)
# - QUANTUM_PROCESSOR_ENABLED (must be true)
# - METRICS_RNG_ENABLED (must be true)
# - BACKGROUND_EXECUTION (must be true)
# - PROMETHEUS_ENABLED (must be true)
