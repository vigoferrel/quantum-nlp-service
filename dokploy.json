{
  "name": "vigoleonrocks-quantum-stack",
  "description": "VIGOLEONROCKS Complete Quantum Stack - Processor + API Gateway + Frontend",
  "services": [
    {
      "name": "quantum-processor",
      "type": "application",
      "build": {
        "type": "dockerfile",
        "dockerfile": "./Dockerfile"
      },
  "environment": {
    "NODE_ENV": "production",
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "false",
    "PORT": "5000",
    "HOST": "0.0.0.0",
    "API_TOKEN": "GBFPf5EzTC7VIlD8rOCm2YfSGM6TaV4uvonczg6h3dfad669",
    "BACKGROUND_EXECUTION": "true",
    "PROMETHEUS_ENABLED": "true",
    "METRICS_RNG_ENABLED": "true",
    "QUANTUM_PROCESSOR_ENABLED": "true",
    "METRICS_RNG_SEED_SOURCE": "kernel",
    "METRICS_RNG_ENTROPY_POOL_SIZE": "4096",
    "METRICS_RNG_RESEED_INTERVAL": "3600",
    "DEFAULT_LANGUAGE": "es",
    "SUPPORTED_LANGUAGES": "es,en,pt,fr,de,it,zh,ja,ko,ru,ar,hi,nl",
    "LOG_LEVEL": "INFO",
    "LOG_FORMAT": "structured",
    "HEALTH_CHECK_ENABLED": "true",
    "HEALTH_CHECK_INTERVAL": "30",
    "PROCESS_MONITORING": "true",
    "DAEMON_MODE": "true"
  },
  "port": 5000,
  "domains": [],
  "volumes": [
    {
      "host": "/var/log/vigoleonrocks",
      "container": "/var/log/vigoleonrocks"
    },
    {
      "host": "/var/lib/vigoleonrocks",
      "container": "/app/data"
    }
  ],
  "healthcheck": {
    "enabled": true,
    "path": "/api/status",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "monitoring": {
    "enabled": true,
    "metrics_path": "/api/status",
    "prometheus_port": 8000
  },
  "security": {
    "non_root_user": true,
    "read_only_root": false
  },
  "deployment": {
    "strategy": "rolling",
    "zero_downtime": true,
    "auto_deploy": true,
    "branch": "main"
  },
  "resources": {
    "memory": "1G",
    "cpu": "1000m"
  }
}
