# VIGOLEONROCKS - Docker Environment Configuration
# Production Environment Variables
# Updated: September 2025

# === CORE CONFIGURATION ===
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=false
PORT=5000
HOST=0.0.0.0

# === SECURITY POLICIES (MANDATORY) ===
# Política #1: Procesos en segundo plano con métricas de depuración
BACKGROUND_EXECUTION=true
PROMETHEUS_ENABLED=true
METRICS_REPORTING=true
LOGGING_LEVEL=INFO

# Política #2: Prohibición de Math.random, usar métricas del sistema
METRICS_RNG_ENABLED=true
SYSTEM_ENTROPY_ENABLED=true
MATH_RANDOM_DISABLED=true
QUANTUM_PROCESSOR_ENABLED=true

# === DATABASE CONFIGURATION ===
# PostgreSQL Database
POSTGRES_DB=vigoleonrocks_db
POSTGRES_USER=vigoleonrocks
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://vigoleonrocks:${POSTGRES_PASSWORD}@postgres:5432/vigoleonrocks_db

# Redis Cache
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# === API KEYS (SECRETS) ===
# OpenRouter API Key (opcional para funciones de IA avanzadas)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Secret Key
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_chars

# === MONITORING CONFIGURATION ===
# Grafana Admin Password
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Prometheus Configuration
PROMETHEUS_RETENTION=200h
PROMETHEUS_SCRAPE_INTERVAL=15s

# === PERFORMANCE SETTINGS ===
# Gunicorn Workers
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30

# Memory Limits
MAX_MEMORY_USAGE=1024MB
WORKER_MEMORY_LIMIT=256MB

# === QUANTUM NLP SPECIFIC ===
# Context Processing
MAX_CONTEXT_LENGTH=500000
CONTEXT_WINDOW_SIZE=4096
QUANTUM_DIMENSIONS=26

# Cultural Intelligence
SUPPORTED_LANGUAGES=12
ARCHETYPAL_CONTEXTS=47
CULTURAL_ANALYSIS_DEPTH=3

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=100MB

# Structured Logging
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_ERROR_TRACKING=true

# === DOCKER SPECIFIC ===
# Container Configuration
CONTAINER_TIMEZONE=UTC
HEALTH_CHECK_INTERVAL=30s
RESTART_POLICY=unless-stopped

# Network Configuration
DOCKER_NETWORK=vigoleonrocks_network
SUBNET=172.20.0.0/16

# === BACKUP CONFIGURATION ===
# Database Backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=7

# === DEVELOPMENT/DEBUG (Only for staging) ===
# Set to false in production
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=false
ENABLE_ADMIN_PANEL=false

# === COMPLIANCE SETTINGS ===
# Data Protection
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
GDPR_COMPLIANCE=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS_PROTECTION=true
ENABLE_RATE_LIMITING=true

# === EXPERIMENTAL FEATURES ===
# Quantum Processing (Research)
ENABLE_QUANTUM_SIMULATION=true
QUANTUM_COHERENCE_TIME=1000ms
PARALLEL_PROCESSING_THREADS=26

# Advanced NLP
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_CULTURAL_ANALYSIS=true
ENABLE_ARCHETYPAL_INTELLIGENCE=true

# === MONITORING ENDPOINTS ===
# Internal monitoring ports
METRICS_PORT=8000
HEALTH_CHECK_PORT=8001
ADMIN_PORT=8002

# External monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# === NOTIFICATIONS ===
# Alert Configuration
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# === NOTES ===
# 1. Replace all 'your_*_here' values with actual secure credentials
# 2. Use strong passwords (minimum 16 characters with mixed case, numbers, symbols)
# 3. Store this file securely and never commit to version control
# 4. For Dokploy deployment, these will be managed through the Dokploy interface
# 5. Ensure all mandatory policies are enabled (BACKGROUND_EXECUTION, METRICS_RNG_ENABLED)
