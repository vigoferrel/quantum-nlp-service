# VIGOLEONROCKS Environment Configuration
# Copy this file to .env and adjust values as needed

# Quantum Image Processor Settings
QIS_MIN_IMAGE_SIDE_FOR_KERNEL=3
QIS_SMALL_IMAGE_FALLBACK=identity  # Options: identity, upsample

# Application Settings
APP_VERSION=2.1.0
FLASK_ENV=production
FLASK_DEBUG=false

# Monitoring
ENABLE_PROMETHEUS=true
METRICS_UPDATE_INTERVAL=5

# CLIP Settings (when available)
ENABLE_CLIP=false
CLIP_MODEL=ViT-B/32

# Logging
LOG_LEVEL=INFO
