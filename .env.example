# Variables de Entorno para VIGOLEONROCKS
# Copiar este archivo como .env y configurar los valores

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vigoleonrocks
DB_USER=vigoleonrocks_user
DB_PASSWORD=vigoleonrocks_secure_2024

# URL completa de la base de datos
DATABASE_URL=postgresql://vigoleonrocks_user:vigoleonrocks_secure_2024@postgres:5432/vigoleonrocks

# === CONFIGURACIÓN DE REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# URL completa de Redis
REDIS_URL=redis://redis:6379/0

# === CONFIGURACIÓN DE LA APLICACIÓN ===
FLASK_ENV=production
SECRET_KEY=vigoleonrocks_quantum_2024
DEBUG=False

# === CONFIGURACIÓN DEL SERVIDOR ===
HOST=0.0.0.0
PORT=5000
WORKERS=4
THREADS=2

# === CONFIGURACIÓN DE IA ===
QUANTUM_STATES=26
MAX_TOKENS_PER_REQUEST=4096
DEFAULT_MODEL=vigoleonrocks-quantum
SUPPORTED_LANGUAGES=es,en,pt,fr,de,it,ja,ko,zh

# === CONFIGURACIÓN DE RATE LIMITING ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/vigoleonrocks.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# === CONFIGURACIÓN DE SEGURIDAD ===
SESSION_TIMEOUT=3600
JWT_SECRET_KEY=vigoleonrocks_jwt_secret_2024
CORS_ORIGINS=*

# === CONFIGURACIÓN DE EMAIL (OPCIONAL) ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# === CONFIGURACIÓN DE MONITOREO ===
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# === CONFIGURACIÓN DE BACKUP ===
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === CONFIGURACIÓN DE CACHE ===
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=vigoleonrocks

# === CONFIGURACIÓN DE UPLOAD ===
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,txt,json

# === CONFIGURACIÓN DE API EXTERNAS ===
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key

# === CONFIGURACIÓN DE MONITORING ===
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# === CONFIGURACIÓN DE SSL (PARA PRODUCCIÓN) ===
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=False

# === CONFIGURACIÓN DE DOMINIO ===
DOMAIN=vigoleonrocks.com
SUBDOMAIN=api

# === CONFIGURACIÓN DE CONTAINERS ===
COMPOSE_PROJECT_NAME=vigoleonrocks
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest