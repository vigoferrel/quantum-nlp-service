# ðŸš€ VIGOLEONROCKS Environment Variables
# Copia este archivo como .env y configura los valores

# ===== FLASK CONFIGURATION =====
FLASK_APP=vigoleonrocks_server.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://vigoleonrocks:quantum2024@localhost:5432/vigoleonrocks
# Para desarrollo local con SQLite:
# DATABASE_URL=sqlite:///vigoleonrocks.db

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
# Para Redis con contraseÃ±a:
# REDIS_URL=redis://:password@localhost:6379

# ===== API KEYS =====
# OpenRouter API Key (para modelos externos)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxx

# ===== APPLICATION SETTINGS =====
APP_NAME=VIGOLEONROCKS
APP_VERSION=1.0.0
DEBUG=true

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=5000
WORKERS=4

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/vigoleonrocks.log

# ===== CACHE SETTINGS =====
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ===== RATE LIMITING =====
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=redis://localhost:6379

# ===== QUANTUM SETTINGS =====
QUANTUM_STATES=26
QUANTUM_PROFILE=human
EMPATHY_LEVEL=5

# ===== MONITORING =====
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PORT=9090

# ===== EMAIL CONFIGURATION =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== SECURITY =====
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== FILE UPLOAD =====
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# ===== CORS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://vigoleonrocks.com

# ===== DOCKER REGISTRY =====
DOCKER_REGISTRY=ghcr.io
DOCKER_REPO=vigoferrel/quantum-nlp-service

# ===== PRODUCTION SETTINGS =====
# Uncomment for production
# FLASK_ENV=production
# DEBUG=false
# DATABASE_URL=postgresql://user:password@prod-db:5432/vigoleonrocks
# REDIS_URL=redis://prod-redis:6379